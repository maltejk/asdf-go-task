#!/usr/bin/env bash

set -euo pipefail

[ -z "${ASDF_INSTALL_TYPE+x}" ] && echo "ASDF_INSTALL_TYPE is required" && exit 1
[ -z "${ASDF_INSTALL_VERSION+x}" ] && echo "ASDF_INSTALL_VERSION is required" && exit 1
[ -z "${ASDF_INSTALL_PATH+x}" ] && echo "ASDF_INSTALL_PATH is required" && exit 1

install() {
  local install_type=$1
  [ "$install_type" != "version" ] && echo "install type, $install_type, is not supported" && exit 1

  local version=$2
  local install_path=$3

  local tool_name="terragrunt-atlantis-config"
  local bin_install_path="$install_path/bin"
  local bin_path="${bin_install_path}/${tool_name}"

  local platform
  [ "Linux" = "$(uname)" ] && platform="linux" || platform="darwin"
  local arch
  [ "x86_64" = "$(uname -m)" ] && arch="amd64" || arch="386"

  local download_url
  download_url="https://github.com/transcend-io/terragrunt-atlantis-config/releases/download/v${version}/${tool_name}_${version}_${platform}_${arch}.tar.gz"

  mkdir -p "${bin_install_path}"

  echo "Downloading transcend-io/terragrunt-atlantis-config from ${download_url}"

  STATUSCODE=$(curl -q --write-out "%{http_code}" -L -C - "$download_url" | tar zx --strip-components=1 --to-stdout ${tool_name}_${version}_${platform}_${arch} > ${bin_path})

  if test "${STATUSCODE}" -ne 200; then
    echo "Binary for version '${version}' was not found or could not be retrieved."
    exit 1
  fi

  chmod +x "$bin_path"
}

install "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"

